---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/about', label: '소개', 
    children: [
      { href: '/about', label: '조합 소개' },
      { href: '/about/history', label: '연혁' },
      { href: '/about/organization', label: '조직도' },
      { href: '/about/location', label: '오시는 길' },
    ]
  },
  { href: '/services', label: '사업안내',
    children: [
      { href: '/services/elderly', label: '노인복지' },
      { href: '/services/disability', label: '장애인 지원' },
      { href: '/services/youth', label: '청소년 지원' },
    ]
  },
  { href: '/notice', label: '공지사항' },
  { href: '/recruit', label: '활동지원사 구직신청' },
];
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <a href="/" class="logo">
        <img src="/images/main-logo.png" alt="사회적협동조합 가치로운" class="logo-img" />
      </a>
      
      <button class="mobile-menu-toggle" aria-label="메뉴 열기">
        <span></span>
        <span></span>
        <span></span>
      </button>
      
      <ul class="nav-menu">
        {navItems.map((item) => (
          <li class="nav-item" class:list={[{ 'has-dropdown': item.children }]}>
            <a 
              href={item.href} 
              class:list={['nav-link', { active: currentPath.startsWith(item.href) }]}
            >
              {item.label}
            </a>
            {item.children && (
              <ul class="dropdown">
                {item.children.map((child) => (
                  <li>
                    <a 
                      href={child.href}
                      class:list={['dropdown-link', { active: currentPath === child.href }]}
                    >
                      {child.label}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    background-color: white;
    box-shadow: var(--shadow-sm);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  
  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) 0;
  }
  
  .logo {
    display: flex;
    align-items: center;
  }
  
  .logo-img {
    height: 50px;
    max-width: 300px;
    object-fit: contain;
    transition: transform 0.3s ease;
  }
  
  .logo-img:hover {
    transform: scale(1.05);
  }
  
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-sm);
  }
  
  .mobile-menu-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    background-color: var(--color-gray-700);
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    gap: var(--spacing-xl);
    margin: 0;
  }
  
  .nav-item {
    position: relative;
  }
  
  .nav-link {
    color: var(--color-gray-700);
    font-weight: 500;
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
    display: block;
  }
  
  .nav-link:hover,
  .nav-link.active {
    color: var(--color-primary-600);
    background-color: var(--color-primary-50);
  }
  
  .has-dropdown:hover .dropdown {
    display: block;
  }
  
  .dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: white;
    box-shadow: var(--shadow-lg);
    border-radius: var(--radius-md);
    padding: var(--spacing-sm);
    min-width: 200px;
    list-style: none;
    margin: var(--spacing-xs) 0 0 0;
  }
  
  .dropdown-link {
    display: block;
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--color-gray-700);
    border-radius: var(--radius-sm);
    transition: all 0.2s ease;
  }
  
  .dropdown-link:hover,
  .dropdown-link.active {
    background-color: var(--color-primary-50);
    color: var(--color-primary-600);
  }
  
  /* 모바일 */
  @media (max-width: 768px) {
    .mobile-menu-toggle {
      display: flex;
    }
    
    .nav-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background-color: white;
      flex-direction: column;
      gap: 0;
      padding: var(--spacing-md);
      box-shadow: var(--shadow-md);
    }
    
    .nav-menu.active {
      display: flex;
    }
    
    .dropdown {
      position: static;
      box-shadow: none;
      padding-left: var(--spacing-lg);
      margin-top: var(--spacing-sm);
    }
    
    .has-dropdown .dropdown {
      display: none;
    }
    
    .has-dropdown.active .dropdown {
      display: block;
    }
  }
</style>

<script>
  // 모바일 메뉴 토글
  const toggle = document.querySelector('.mobile-menu-toggle');
  const menu = document.querySelector('.nav-menu');
  
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('active');
  });
  
  // 드롭다운 모바일 처리
  if (window.innerWidth <= 768) {
    const dropdownItems = document.querySelectorAll('.has-dropdown > .nav-link');
    dropdownItems.forEach((item) => {
      item.addEventListener('click', (e) => {
        e.preventDefault();
        const parent = (e.target as HTMLElement).closest('.has-dropdown');
        parent?.classList.toggle('active');
      });
    });
  }
</script>
