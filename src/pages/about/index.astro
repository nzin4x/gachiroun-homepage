    opacity: 0.95;
  }

  .intro-section {
    padding: var(--spacing-4xl) 0;
  }

  .intro-content {
    max-width: 900px;
    margin: 0 auto var(--spacing-3xl);
    text-align: center;
  }

  .intro-content h2 {
    font-size: 2.5rem;
    color: var(--color-primary-600);
    margin-bottom: var(--spacing-xl);
  }

  .lead {
    font-size: 1.375rem;
    color: var(--color-gray-900);
    margin-bottom: var(--spacing-lg);
    line-height: 1.6;
  }

  .intro-content p {
    font-size: 1.125rem;
    color: var(--color-gray-700);
    line-height: 1.8;
  }

  .mission-vision {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-4xl);
  }

  .mission-card {
    background: white;
    padding: var(--spacing-3xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    text-align: center;
  }

  .card-icon {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-lg);
  }

  .mission-card h3 {
    color: var(--color-primary-600);
    font-size: 1.75rem;
    margin-bottom: var(--spacing-lg);
  }

  .mission-card p {
    color: var(--color-gray-700);
    line-height: 1.8;
    font-size: 1.125rem;
  }

  .values-section {
    margin-bottom: var(--spacing-4xl);
  }

  .section-title {
    text-align: center;
    font-size: 2.25rem;
    color: var(--color-primary-600);
    margin-bottom: var(--spacing-3xl);
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-2xl);
  }

  .value-card {
    background: var(--color-bg-light);
    padding: var(--spacing-2xl);
    border-radius: var(--radius-lg);
    text-align: center;
    transition: all 0.3s ease;
  }

  .value-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    background: white;
  }

  .value-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-lg);
  }

  .value-card h4 {
    color: var(--color-primary-600);
    font-size: 1.25rem;
    margin-bottom: var(--spacing-md);
  }

  .value-card p {
    color: var(--color-gray-700);
    line-height: 1.6;
  }

  .features-section {
    background: var(--color-bg-light);
    padding: var(--spacing-4xl) 0;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-2xl);
  }

  .feature-item {
    background: white;
    padding: var(--spacing-2xl);
    border-radius: var(--radius-lg);
    text-align: center;
  }

  .feature-number {
    display: inline-block;
    width: 60px;
    height: 60px;
    line-height: 60px;
    background: linear-gradient(135deg, var(--color-primary-500), var(--color-primary-600));
    color: white;
    border-radius: 50%;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-lg);
  }

  .feature-item h4 {
    color: var(--color-gray-900);
    font-size: 1.25rem;
    margin-bottom: var(--spacing-md);
  }

  .feature-item p {
    color: var(--color-gray-600);
    line-height: 1.6;
  }

  @media (max-width: 1024px) {
    .values-grid,
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .page-hero h1 {
      font-size: 2rem;
    }

    .intro-content h2 {
      font-size: 1.75rem;
    }

    .lead {
      font-size: 1.125rem;
    }

    .mission-vision {
      grid-template-columns: 1fr;
    }

    .values-grid,
    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
